<Window x:Class="CustomerEditor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        DataContext="{StaticResource CustomerEditorViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="225"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Welcome Label -->
        <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" 
               Content="Welcome to the blooed monitoring application. Please Enter patient User ID" Background="AliceBlue"/>

        <!-- Samples -->
        <Grid Grid.Row="1" Grid.Column="1" Background="BurlyWood">
            <DataGrid   
                      ItemsSource="{Binding Customers}"
                      SelectedItem="{Binding CurrentCustomer, Mode=TwoWay}"
                      HeadersVisibility="Column">
            </DataGrid>
        </Grid>


    </Grid>
</Window>
